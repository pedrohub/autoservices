<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory >
  <property name="hibernate.connection.driver_class">org.gjt.mm.mysql.Driver</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property> 
   <property name="hibernate.connection.username">${hibernate_username}</property>
  <property name="hibernate.connection.password">${hibernate_password}</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost/auto_services</property>
 <property name="hibernate.hbm2ddl.auto">false</property>

  <mapping class="br.com.autoservice.modelo.Usuario"/> 
  <mapping class="br.com.autoservice.modelo.Cliente"/>
  <mapping class="br.com.autoservice.modelo.Veiculo"/>
   <mapping class="br.com.autoservice.modelo.Endereco"/>
  
 </session-factory>
</hibernate-configuration>
